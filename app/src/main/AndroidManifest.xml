<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookmydoctormeet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mediseen"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mediseen"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookMyDoctorMeet">
        <activity
            android:name=".OTPDoctor"
            android:exported="true"
            android:label="Verification"
            android:parentActivityName=".DoctorReg"
            android:theme="@style/Theme.BookMyDoctorMeet" />
        <activity
            android:name=".OTPUser"
            android:exported="true"
            android:label="Verification"
            android:parentActivityName=".UserReg"
            android:theme="@style/Theme.BookMyDoctorMeet" />
        <activity
            android:name=".BookAppointmentForUser"
            android:exported="true"
            android:label="Ask for an appointment"
            android:parentActivityName=".UserHome"
            android:theme="@style/Theme.BookMyDoctorMeet" />
        <activity
            android:name=".UserHome"
            android:exported="true"
            android:label="User Home"
            android:parentActivityName=".Login"
            android:theme="@style/Theme.BookMyDoctorMeet" />
        <activity
            android:name=".DoctorHome"
            android:exported="true"
            android:label="Doctor Home"
            android:parentActivityName=".Login"
            android:theme="@style/Theme.BookMyDoctorMeet" />
        <activity
            android:name=".Login"
            android:exported="true"
            android:label="Login"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.BookMyDoctorMeet" />
        <activity
            android:name=".DoctorReg"
            android:exported="true"
            android:label="Doctor Registration"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.BookMyDoctorMeet" />
        <activity
            android:name=".UserReg"
            android:exported="true"
            android:label="User Registration"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.BookMyDoctorMeet" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="MediSeen"
            android:theme="@style/Theme.BookMyDoctorMeet">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>